{% extends '::base.html.twig' %}

{% block content %}
    <div class="btn-group pull-right">
        {% set path = path(
            'issue_edit',
            {'username': username, 'repository': repository, 'number': issue.number}
        ) %}

        <a class="btn btn-default" href="{{ path }}">
            {{ 'edit'|trans }}
        </a>
        <a class="btn btn-default" href="{{ path('issue_list', {'username': username, 'repository': repository} ) }}">
            {{ 'back_to_list'|trans }}
        </a>
    </div>

    <h1>{{ 'issue'|trans }} #{{ issue.number }} - {{ issue.title }}</h1>

    <table class='table table-hover table-responsive table-bordered table-striped'>
        <tr>
            <th>{{ 'number'|trans }}</th>
            <td>{{ issue.number }}</td>
        </tr>
        <tr>
            <th>{{ 'title'|trans }}</th>
            <td>{{ issue.title }}</td>
        </tr>
        <tr>
            <th>{{ 'body'|trans }}</th>
            <td>{{ issue.body }}</td>
        </tr>
        <tr>
            <th>{{ 'state'|trans }}</th>
            <td>{{ issue.state }}</td>
        </tr>
        <tr>
            <th>{{ 'created_at'|trans }}</th>
            <td>{{ issue.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>{{ 'updated_at'|trans }}</th>
            <td>{{ issue.updatedAt|date('Y-m-d H:i:s') }}</td>
        </tr>
    </table>

{% endblock %}
